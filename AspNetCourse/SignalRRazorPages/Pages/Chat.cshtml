@page
@model ChatModel

    <div>
        <h2>Chat</h2>
        <input name="newMessage" id="messageInput" class="form-control" 
               autocomplete="off"
               autofocus
               onkeydown="sendNewMessage(event)"
               placeholder="Wpisz wiadomość" />
        <hr />
        <div id="messages"></div>
        <partial name="_ItemTemplate" />
    </div>
@section Scripts {
    <script>
        buildConnection('@Model.ApiBaseUrl');
    </script>
}